# Тестові налаштування додатку
APP_NAME=Avocado Test
API_PREFIX=/api
DEBUG=False

# Налаштування бази даних для тестів
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/avocado_test
# Для тестів ми завжди використовуємо SQLite
USE_SQLITE=True
SQLITE_DB_PATH=sqlite:///./test.db
TEST_SQLITE_DB_PATH=sqlite:///./test.db

# Налаштування безпеки
SECRET_KEY=test-secret-key-for-testing-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Налаштування CORS
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Налаштування електронної пошти для тестів
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASSWORD=test-password
SMTP_SENDER=Avocado Test <test@example.com>

# Налаштування файлового сховища
UPLOAD_DIR=test_uploads