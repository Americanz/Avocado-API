# Базові налаштування додатку
APP_NAME=Avocado
APP_DESCRIPTION="Avocado API - Система для управління малим та середнім бізнесом"
APP_VERSION=1.0.0
API_PREFIX=/api
DEBUG=True
LOAD_DEMO_DATA=True

# Налаштування бази даних
DATABASE_URL=sqlite:///./database.db
USE_SQLITE=True
SQLITE_DB_PATH=sqlite:///./database.db
TEST_SQLITE_DB_PATH=sqlite:///./test.db
RESET_DB=True

# Налаштування безпеки
SECRET_KEY=your-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Налаштування CORS
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Налаштування електронної пошти
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER=Avocado System <your-email@gmail.com>

# Налаштування файлового сховища
UPLOAD_DIR=uploads

# Налаштування аудиту дій користувачів
ENABLE_AUDIT_LOG=True

# Налаштування документації API
ENABLE_SWAGGER=True
ENABLE_REDOC=True

# Авторизация
ENABLE_PASSWORD_AUTH=True
ENABLE_OTP_AUTH=True
ENABLE_SOCIAL_AUTH=False
OTP_EXPIRY_MINUTES=15

TELEGRAM_BOT_TOKEN=""

# Налаштування Supabase
SUPABASE_BUCKET=""
SUPABASE_API_URL=""
SUPABASE_API_KEY=""
